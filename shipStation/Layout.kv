<TrackerFrame>:
	BoxLayout:
		orientation: 'vertical'

		BoxLayout:
			orientation: 'horizontal'
			Label:
				size_hint_x: None
				width: 100
				text: "Local Gps Source: "
				font_size: '20sp'
			Label:
				id: localGpsSource
				size_hint_x: None
				width: 100
				text: "Arduino"
				font_size: '20sp'
				pos_hint: {'center_x': .5, 'center_y': 0.5}

		BoxLayout:
			orientation: 'horizontal'
			Label:
				size_hint_x: None
				width: 100
				text: "Lat: "
				font_size: '20sp'
			TextInput:
				id: gpsLat
				readonly: True
				font_size: '20sp'
				multiline: False
				size_hint_x: None
				size_hint_y: None
				width: 200
				height: 40
				pos_hint: {'center_x': .5, 'center_y': 0.5}

		BoxLayout:
			orientation: 'horizontal'
			Label:
				size_hint_x: None
				width: 100
				text: "Lon: "
				font_size: '20sp'
			TextInput:
				id: gpsLon
				readonly: True
				font_size: '20sp'
				multiline: False
				size_hint_x: None
				size_hint_y: None
				width: 200
				height: 40
				pos_hint: {'center_x': .5, 'center_y': 0.5}

		BoxLayout:
			orientation: 'horizontal'
			Label:
				size_hint_x: None
				width: 100
				text: "Alt: "
				font_size: '20sp'
			TextInput:
				id: altMeters
				readonly: True
				font_size: '20sp'
				multiline: False
				size_hint_x: None
				size_hint_y: None
				width: 200
				height: 40
				pos_hint: {'center_x': .5, 'center_y': 0.5}



